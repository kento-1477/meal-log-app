{
  "name": "meal-log-app",
  "version": "1.0.0",
  "description": "A simple chat-based meal logging web app.",
  "engines": {
    "node": "22.x"
  },
  "main": "server.js",
  "scripts": {
    "start": "node start.js",
    "changelog": "conventional-changelog -p angular -i app_summary_and_log.md -s -r 0",
    "prepare": "husky",
    "test": "NODE_ENV=test ENABLE_CRON=false jest --runInBand",
    "lint": "eslint . --max-warnings=0",
    "dev": "nodemon start.js",
    "migrate:make": "knex migrate:make",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:reset": "dotenv -e .env.test -- knex migrate:rollback --all && npm run migrate:test",
    "seed:make": "knex seed:make",
    "migrate:dev": "dotenv -e .env.development -- knex migrate:latest",
    "seed:dev": "dotenv -e .env.development -- knex seed:run",
    "migrate:test": "dotenv -e .env.test -- knex migrate:latest",
    "migrate:prod": "dotenv -e .env.production -- sh -c 'DATABASE_URL=\"$DATABASE_URL_DIRECT\" npx knex migrate:latest'",
    "seed:prod": "dotenv -e .env.production -- sh -c 'DATABASE_URL=\"$DATABASE_URL_DIRECT\" npx knex seed:run'",
    "psql:prod": "dotenv -e .env.production -- bash -lc 'psql -d \"$DATABASE_URL_DIRECT\" \"$@\"' --"
  },
  "lint-staged": {
    "*.{js,json,css,md}": "prettier --write"
  },
  "prettier": {
    "singleQuote": true,
    "semi": true
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "connect-pg-simple": "^10.0.0",
    "csv-parser": "^3.2.0",
    "csv-stringify": "^6.6.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^17.2.1",
    "express": "^4.19.2",
    "express-session": "^1.18.2",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "knex": "^3.1.0",
    "lint-staged": "^16.1.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "reminders\\.cron\\.test\\.js$",
      "server\\.test\\.js$"
    ],
    "testEnvironment": "node"
  }
}
